<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mall.malladmin.mapper.system.AdminMapper">

    <sql id="Base_Column_List">
        user_id, login_Code, password, name, phone, pic_url, role, is_usable, create_time,
        modify_time
    </sql>

    <select id="findByLoginId" resultType="com.mall.malladmin.dto.system.AdminDto" parameterType="String">
        SELECT
        <include refid="Base_Column_List" />
        FROM system_admin m WHERE m.login_Code = #{loginCode}
    </select>
</mapper>